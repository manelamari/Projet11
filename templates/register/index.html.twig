{% extends 'base.html.twig' %}

{% block title %}Formulaire d'inscription{% endblock %}

{% block body %}
  <section class="container">
    <div class="row">
      <div class="col">
        <div class="col-6">
          <h1>Inscription</h1>

       {{ form_start(registrationForm) }}
          <div class="mb-3">
            {{ form_label(registrationForm.nom,'Nom',{'label_attr':{'class':'form-label'}}) }}
            {{ form_row(registrationForm.nom,{'attr':{'class':'form-control'}}) }}
          </div>
          <div class="mb-3">
            {{ form_label(registrationForm.prenom,'Prénom',{'label_attr':{'class':'form-label'}}) }}
            {{ form_row(registrationForm.prenom,{'attr':{'class':'form-control'}}) }}
          </div>
          <div class="mb-3">
            {{ form_label(registrationForm.email,'Email',{'label_attr':{'class':'form-label'}}) }}
            {{ form_row(registrationForm.email,{'attr':{'class':'form-control'}}) }}
          </div>
          <div class="mb-3">
            {{ form_label(registrationForm.telephone,'Télephone',{'label_attr':{'class':'form-label'}}) }}
            {{ form_row(registrationForm.telephone,{'attr':{'class':'form-control'}}) }}
          </div>
          <div class="mb-3">
            {{ form_label(registrationForm.rue,'Rue',{'label_attr':{'class':'form-label'}}) }}
            {{ form_row(registrationForm.rue,{'attr':{'class':'form-control'}}) }}
          </div>
          <div class="mb-3">
            {{ form_label(registrationForm.codePostale,'Code postale',{'label_attr':{'class':'form-label'}}) }}
            {{ form_row(registrationForm.codePostale,{'attr':{'class':'form-control'}}) }}
          </div>
          <div class="mb-3">
            {{ form_label(registrationForm.ville,'VILLE',{'label_attr':{'class':'form-label'}}) }}
            {{ form_row(registrationForm.ville,{'attr':{'class':'form-control'}}) }}
          </div>
          <div class="mb-3">
            {{ form_label(registrationForm.plainPassword )}}

          </div>
          {{ form_end(registrationForm) }}

          <button class="btn btn-lg btn-primary mt-3" type="submit">
            S'inscrire
          </button>

        </div>
      </div>
    </div>
  </section>

{% endblock %}
